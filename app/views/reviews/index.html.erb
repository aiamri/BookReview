<p id="notice"><%= notice %></p>

<h1>Listing Reviews</h1>

<table>
  <thead>
    <tr>
      <th>User Email</th>
      <th>Title</th>
      <th>Author</th>
      <th>Publisher</th>
      <th>Publish date</th>
      <th>Genre</th>
      <th>Price</th>
      <th>Review</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.user.email %></td>
        <td><%= review.title %></td>
        <td><%= review.author %></td>
        <td><%= review.publisher %></td>
        <td><%= review.publish_date %></td>
        <td><%= review.genre %></td>
        <td><%= review.price %></td>
        <td><%= review.review %></td>
        <td><%= link_to 'Show', review %></td>
        <td><%= link_to 'Edit', edit_review_path(review) if review.user.id == current_user.id %></td>
        <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Review', new_review_path %>
